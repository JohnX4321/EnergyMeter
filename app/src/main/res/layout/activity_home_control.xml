<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Mode"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

    <com.thingsenz.energymeter.SwitchButton
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/powerModeButton"
        app:sb_button_color="#db99c7"
        app:sb_shadow_color="#A36F95"
        app:sb_background="#FFF"
        app:sb_checkline_color="#a5dc88"
        app:sb_checked_color="#a5dc88"
        app:sb_uncheckcircle_color="#A36F95"
        app:sb_uncheckbutton_color="#fdc951"
        app:sb_checkedbutton_color="#61d74f" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eco Mode"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />



    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/deepPurple" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode 0"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <com.thingsenz.energymeter.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:id="@+id/manualControlButton"
            app:sb_button_color="#db99c7"
            app:sb_shadow_color="#A36F95"
            app:sb_background="#FFF"
            app:sb_checkline_color="#a5dc88"
            app:sb_checked_color="#a5dc88"
            app:sb_uncheckcircle_color="#A36F95"
            app:sb_uncheckbutton_color="#fdc951"
            app:sb_checkedbutton_color="#61d74f" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode 1"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />



    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/deepPurple" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Off"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <com.thingsenz.energymeter.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:id="@+id/lightControlButton"
            app:sb_button_color="#db99c7"
            app:sb_shadow_color="#A36F95"
            app:sb_background="#FFF"
            app:sb_checkline_color="#a5dc88"
            app:sb_checked_color="#a5dc88"
            app:sb_uncheckcircle_color="#A36F95"
            app:sb_uncheckbutton_color="#fdc951"
            app:sb_checkedbutton_color="#61d74f" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light On"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />



    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/deepPurple" />





</LinearLayout>